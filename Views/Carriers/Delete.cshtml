@model EF_CRUD.Models.Carrier

@{
    ViewBag.Title = "Carrier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Carrier</h2>

<h3>Are you sure you want to delete this Carrier?</h3>

<div style="height:20px;"></div>
<div style="width:600px; margin-right:auto; margin-left:auto;" class="text-danger">@ViewBag.Message</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <table style="width:50%; margin-left:40px; margin-right:auto;">
        <tr>
            <td style="padding:6px; text-align:right; width:20%">
                
            </td>
            <td style="font-weight:bold;">
                @if (Model.ImageName != null)
                {
                    <img src="@ViewBag.imageLocation/@Html.DisplayFor(model => model.ImageName)" />@Html.Raw("&nbsp; &nbsp;")
                }
                @Html.DisplayFor(model => model.CarrierName)
            </td>
        </tr>
        <tr>
            <td></td>
            <td style="padding:6px;">
                <input type="submit" value="Delete" class="btn btn-default" onclick="return ConfirmDelete();" />
                <input type="button" value="Cancel" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Index", "Carriers") + "'");" />
            </td>
        </tr>
    </table>
}
