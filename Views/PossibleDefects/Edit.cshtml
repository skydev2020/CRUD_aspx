@model EF_CRUD.Models.PossibleDefect

@{
    ViewBag.Title = "Edit Possible Defect";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Possible Defect</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div style="height:20px;"></div>
    <div style="width:600px; margin-right:auto; margin-left:auto;">@ViewBag.Message</div>
    <table style="width:80%; margin-left:auto; margin-right:auto;">
        <tr>
            <td style="padding:5px; text-align:right; vertical-align:top;">
                <b>Defect Group</b>
            </td>
            <td style="padding:5px" colspan="2">
                @Html.TextAreaFor(x => x.DefectGroup.GroupName)
                <input type="hidden" name="DefectGroupId" id="DefectGroupId" value="@Html.DisplayFor(x => x.DefectGroupId)" />
            </td>
        </tr>
        <tr>
            <td style="padding:5px; text-align:right;">
                <b>Defect Name</b>
            </td>
            <td style="padding:5px;" colspan="2">
                @Html.EditorFor(model => model.DefectName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DefectName, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td style="padding:5px; text-align:right;">
                <b>Defect Cost</b>
            </td>
            <td style="padding:5px;" colspan="2">
                @Html.EditorFor(model => model.DefectCost, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DefectCost, "", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td style="padding:5px; text-align:right;">
                <b>Version</b>
            </td>
            <td style="padding:5px;" colspan="2">
                @Html.DisplayTextFor(x => x.PhoneVersion.Version)
                <input type="hidden" name="VersionId" id="VersionId" value="@Html.DisplayFor(x => x.VersionId)" />
            </td>
        </tr>
        <tr>
            <td style="padding:5px;"></td>
            <td style="padding:5px;" colspan="2">
                <input type="submit" value="Save" class="btn btn-default" />
                <input type="button" value="Cancel" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Index", "PossibleDefects") + "'");" />
            </td>
        </tr>
    </table>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
