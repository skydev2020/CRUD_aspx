@model EF_CRUD.Models.PossibleDefect

@{
    ViewBag.Title = "Delete Possible Defect";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Possible Defect</h2>

<h3>Are you sure you want to delete this Possible Defect?</h3>

<div style="height:20px;"></div>
<div style="width:600px; margin-right:auto; margin-left:auto;" class="text-danger">@ViewBag.Message</div>

@using (Html.BeginForm("Delete", "Phones", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <table style="width:100%; margin-left:auto; margin-right:auto;">
        <tr>
            <td style="padding:5px; text-align:right;">
                <b>Defect Group</b>
            </td>
            <td style="padding:5px;" colspan="2">
                @Html.DisplayTextFor(x => x.DefectGroup.GroupName)
            </td>
        </tr>
        <tr>
            <td style="padding:5px; text-align:right;">
                <b>Defect Name</b>
            </td>
            <td style="padding:5px;" colspan="2">
                @Html.DisplayTextFor(x => x.DefectName)
            </td>
        </tr>
        <tr>
            <td style="padding:5px; text-align:right;">
                <b>Defect Cost</b>
            </td>
            <td style="padding:5px;" colspan="2">
                @Html.DisplayTextFor(x => x.DefectCost)
            </td>
        </tr>
        <tr>
            <td style="padding:5px; text-align:right;">
                <b>Version</b>
            </td>
            <td style="padding:5px;" colspan="2">
                @Html.DisplayTextFor(x => x.PhoneVersion.Version)
            </td>
        </tr>
        <tr>
            <td style="padding:5px;"></td>
            <td style="padding:5px;" colspan="2">
                <input type="submit" value="Delete" class="btn btn-default" onclick="return ConfirmDelete();" />
                <input type="button" value="Cancel" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Index", "PossibleDefects") + "'");" />
            </td>
        </tr>
    </table>
}