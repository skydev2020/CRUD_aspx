@model IEnumerable<EF_CRUD.Models.Permission>

@{
    ViewBag.Title = "Permissions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    <button onclick="location.href='@Url.Action("Create", "Permissions")';return false;" class="btn btn-default">New Permission</button>
</p>
<table class="table">
    <tr class="TableHeader">
        <th colspan="3">
            @Html.DisplayNameFor(model => model.PermissionType)
        </th>
    </tr>
    @{ var i = 0; }
    @foreach (var item in Model)
    {
        var classStyle = "AltRow";
        if (i == 0) { classStyle = ""; i--; } else { i++; }
        <tr class="@classStyle">
            <td style="width:35%; vertical-align:middle; text-align:right">
                @Html.DisplayFor(modelItem => item.PermissionType)
            </td>
            <td style="width:80%; text-align:center; vertical-align:middle;">
                @Html.ActionLink("Edit", "Edit", new { id = item.PermissionId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PermissionId })
            </td>
        </tr>
    }

</table>
